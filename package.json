{
  "name": "PoECustomSoundtrack",
  "version": "1.6.1",
  "description": "A small app to replace path of exile music with that of diablo",
  "main": "main.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=development electron main.js",
    "electron:dev": "node scripts/dev.js",
    "electron:build": "npm run build && electron-builder",
    "release": "npm run build && electron-builder -p onTagOrDraft",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "PoECustomSoundtrack",
    "asar": "true",
    "files": [
      "main.js",
      "poeCustomSoundtrack.js",
      "bosses.js",
      "defaults.js",
      "package.json",
      "dist-renderer/**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "publish": "github",
      "icon": "pietyd2.ico",
      "target": [
        "zip",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": "true",
      "perMachine": "true"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    }
  },
  "author": "jareddr",
  "license": "CC0-1.0",
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-settings": "^4.0.4",
    "electron-updater": "^6.1.7",
    "file-tail": "^0.3.0",
    "ipc": "0.0.1",
    "ps-list": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.32",
    "svelte": "^4.2.7",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
